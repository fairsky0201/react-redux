{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "rootDirs": ["./src", "./types"],
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["vitest/globals", "vitest/importMeta"]
  },
  "exclude": ["node_modules", "dist", "test/**/*"]
}
